{
  "name": "itwillsync",
  "version": "1.3.1",
  "description": "Sync any terminal-based coding agent to your phone over local network",
  "type": "module",
  "bin": {
    "itwillsync": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "agent",
    "sync",
    "terminal",
    "remote",
    "mobile",
    "claude",
    "aider",
    "coding-agent"
  ],
  "author": "Shrijayan Rajendran",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shrijayan/itwillsync.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/shrijayan/itwillsync/issues"
  },
  "homepage": "https://github.com/shrijayan/itwillsync#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@clack/prompts": "^1.0.1",
    "node-pty": "^1.0.0",
    "qrcode-terminal": "^0.12.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^25.3.2",
    "@types/ws": "^8.5.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  }
}
