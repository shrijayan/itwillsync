{
  "name": "itwillsync",
  "version": "0.1.0",
  "description": "Sync any terminal-based coding agent to your phone over local network",
  "type": "module",
  "bin": {
    "itwillsync": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "postinstall": "node -e \"const fs=require('fs'),p=require('path'),d=p.join(require.resolve('node-pty'),'..','..','prebuilds',process.platform+'-'+process.arch,'spawn-helper');try{fs.chmodSync(d,0o755)}catch{}\""
  },
  "keywords": [
    "agent",
    "sync",
    "terminal",
    "remote",
    "mobile",
    "claude",
    "aider",
    "coding-agent"
  ],
  "author": "Shrijayan Rajendran",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shrijayan/itwillsync.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/shrijayan/itwillsync/issues"
  },
  "homepage": "https://github.com/shrijayan/itwillsync#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "node-pty": "^1.0.0",
    "ws": "^8.18.0",
    "qrcode-terminal": "^0.12.0"
  },
  "devDependencies": {
    "@types/node": "^25.3.2",
    "@types/ws": "^8.5.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0"
  }
}
