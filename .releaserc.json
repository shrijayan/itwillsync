{
  "branches": ["main"],
  "tagFormat": "v${version}",
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    ["@semantic-release/changelog", {
      "changelogFile": "packages/cli/CHANGELOG.md"
    }],
    ["@semantic-release/npm", {
      "pkgRoot": "packages/cli"
    }],
    ["@semantic-release/git", {
      "assets": ["packages/cli/package.json", "packages/cli/CHANGELOG.md"],
      "message": "chore(release): ${nextRelease.version}\n\nAutomatically generated by semantic-release"
    }],
    "@semantic-release/github"
  ]
}
